<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/FullConstraint"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintMyPost"
        android:layout_width="300dp"
        android:layout_height="130dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/TT_Post">

        <ImageView
            android:id="@+id/ivArrow"
            android:layout_width="30dp"
            android:layout_height="30dp"
            tools:src="@drawable/ic_arrowplay"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            />
        <TextView
            android:id="@+id/txtTitle"
            android:layout_width="200dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toEndOf="@id/ivArrow"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="20dp"
            android:textSize="20sp"
            tools:text="Title 1"/>
        <TextView
            android:id="@+id/txtDate"
            android:layout_width="200dp"
            android:layout_height="0dp"
            tools:text = "14/08/2023"
            android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@id/txtTitle"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="50dp"/>
        <ImageView
            android:id="@+id/ivSend"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:layout_constraintTop_toBottomOf="@id/txtDate"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="50dp"
            tools:src="@drawable/ic_send"
            />
        <ImageView
            android:id="@+id/ivEdit"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:layout_constraintTop_toBottomOf="@id/txtDate"
            app:layout_constraintStart_toEndOf="@id/ivSend"
            android:layout_marginLeft="30dp"
            tools:src="@drawable/ic_edit"
            />
        <ImageView
            android:id="@+id/ivDelete"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:layout_constraintTop_toBottomOf="@id/txtDate"
            app:layout_constraintStart_toEndOf="@id/ivEdit"
            android:layout_marginLeft="30dp"
            tools:src="@drawable/ic_delete"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>