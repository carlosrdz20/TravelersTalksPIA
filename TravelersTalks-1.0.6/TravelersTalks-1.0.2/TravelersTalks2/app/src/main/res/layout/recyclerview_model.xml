<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/Card_View"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="10dp"
    app:cardElevation="3dp"
    android:layout_margin="15dp"
    android:foreground="?selectableItemBackground"
    android:clickable="true"
    app:cardBackgroundColor="@color/TT_Post"
    >
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"/>
    <ImageView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:id="@+id/item_pfpicture"
        android:src="@drawable/ic_person"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NickName"
        android:id="@+id/item_nickname"
        android:layout_marginLeft="250px"
        android:layout_marginTop="20px"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="14/08/2023"
        android:id="@+id/item_date"
        android:layout_marginLeft="250px"
        android:layout_marginTop="70px"/>
    <TextView
        android:layout_width="70dp"
        android:layout_height="20dp"
        android:text="   + Follow"
        android:id="@+id/item_follow"
        android:layout_marginLeft="700px"
        android:layout_marginTop="50px"
        android:background="@color/TT_Action"/>
    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/blankheart"
        android:id="@+id/item_like"
        android:layout_marginTop="110px"
        android:layout_marginLeft="740px"/>
    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_flag_mx"
        android:id="@+id/item_flag"
        android:layout_marginTop="200px"
        android:layout_marginLeft="740px"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:text="Titulo del Post"
        android:id="@+id/item_titulo"
        android:layout_marginLeft="30px"
        android:layout_marginTop="220px"
        android:textStyle="bold"/>

    <ImageView
        android:layout_width="124dp"
        android:layout_height="40dp"
        android:id="@+id/item_stars"
        android:layout_marginLeft="0px"
        android:layout_marginTop="250px"
        android:src="@drawable/ic_fivestars"/>

    <ImageView
        android:layout_width="300dp"
        android:layout_height="250dp"
        android:layout_marginLeft="115px"
        android:layout_marginTop="250px"
        android:id="@+id/item_img"
        android:src="@drawable/purecomedy"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="See More"
        android:id="@+id/item_seemore"
        android:layout_marginTop="850px"
        android:layout_marginLeft="50px"
        android:textStyle="bold"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="See More"
        android:layout_marginTop="850px"
        android:layout_marginLeft="220px"
        android:id="@+id/item_seemorearrow"
        android:src="@drawable/ic_arrow_black"/>

</androidx.cardview.widget.CardView>